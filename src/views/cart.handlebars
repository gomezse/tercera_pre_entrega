<div class="row">
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card shopping-cart" style="border-radius: 15px;">
                        <div class="card-body text-black">

                            <div class="row">
                                <div class="col-lg-12 px-5 py-4">

                                    <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase">Listado de Productos Por Carrito</h3>

                                    {{#each cart}}
                                    <div class="d-flex align-items-center mb-6">
                                        <div class="flex-shrink-0">
                                            <img src="{{product.thumbnails}}" class="img-fluid" style="width: 150px;"
                                                alt="Generic placeholder image">
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                           
                                            <h5 class="text-primary">{{product.title}}</h5>

                                            <div class="d-flex align-items-center">
                                                <p class="fw-bold mb-0 me-5 pe-3">{{product.description}}</p>
                                                <p class="fw-bold mb-0 me-5 pe-3">CÃ³digo: {{product.code}}</p>
                                                <p class="fw-bold mb-0 me-5 pe-3">$ {{product.price}}</p>
                                                <p class="fw-bold mb-0 me-5 pe-3">Categoria: {{product.category}}</p>
                                                <p class="fw-bold mb-0 me-5 pe-3">Cantidad: {{quantity}}</p>                                           
                                            </div>
                                        </div>
                                    </div>

                                    {{/each}}
                                    <hr class="mb-4" style="height: 2px; background-color: #1266f1; opacity: 1;">
                                </div>

                                </form>                           
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
</div>
</section>